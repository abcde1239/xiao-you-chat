{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/**/*.ts",
    "src/renderer/src/utils/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["node", "electron-vite/node"],
    "module": "node16",
    "moduleResolution": "node16"
  }
}
